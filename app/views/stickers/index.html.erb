<h1>Stickers</h1>

<% if @stickers.present? %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Image</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @stickers.each do |sticker| %>
        <tr>
          <td><%= sticker.name %></td>
          <td><%= sticker.description %></td>
          <td><%= sticker.price %></td>
          <td>
            <% if sticker.image.attached? %>
              <%= image_tag sticker.image.variant(resize_to_limit: [100, 100]) %>
            <% else %>
              <%= image_tag 'placeholder.png' %>
            <% end %>
          </td>
          <td><%= link_to 'Show', sticker_path(sticker) %></td>
          <td><%= link_to 'Edit', edit_sticker_path(sticker) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No stickers available at this time. Please try again later.</p>
<% end %>

<%= link_to 'Create a Sticker', new_sticker_path %>

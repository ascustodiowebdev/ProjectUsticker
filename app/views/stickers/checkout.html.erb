<h1>Checkout</h1>

<%= form_with(model: @order, url: process_order_path, method: :post) do |form| %>
  <div class="mb-3">
    <%= form.label :full_name, class: "form-label" %>
    <%= form.text_field :full_name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :email, class: "form-label" %>
    <%= form.email_field :email, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :phone_number, class: "form-label" %>
    <%= form.text_field :phone_number, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :address, class: "form-label" %>
    <%= form.text_area :address, class: "form-control" %>
  </div>

  <div class="d-grid">
    <%= form.submit "Place Order", class: "btn btn-primary" %>
  </div>
<% end %>

<h2>Cart Items:</h2>
<% @cart_stickers.each do |sticker| %>
  <p><%= sticker.name %> - <%= number_to_currency(sticker.price) %></p>
<% end %>

<h2>Total Price: <%= number_to_currency(@cart_total) %></h2>

<%= link_to 'Back to Cart', cart_path %>
